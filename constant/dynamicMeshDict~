FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh dynamicMotionSolverFvMesh;

solver RBFMotionSolver;

movingPatches ( airfoil );

staticPatches ( inlet outlet walls );

coarseningRatio 5;

includeStaticPatches   no;
frozenInterpolation    yes;

interpolation
{
    RBF  IMQB;
    focalPoint (0.25 0 0);
    innerRadius 1;//5.0
    outerRadius 5;
    polynomials true;

    W2Coeffs
    {
        radius     1.0;
    }
    TPSCoeffs
    {
        radius     5.0;
    }
    GaussCoeffs
    {
        radius     0.1;
    }
    IMQBCoeffs
    {
        radius     0.001;
    }
}


